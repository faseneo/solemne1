
@page
@model ListModel
@{
    ViewData["Title"] = "List of Records";
}

<h2>Registros</h2>
<a asp-page="Create">Nuevo Registro</a>
<table  class="table">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Descripci√≥n</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model.Records)
        {
            <tr>
                <td>@record.Name</td>
                <td>@record.Description</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@record.Id">Editar</a>
                    <a asp-page-handler="Delete" asp-route-id="@record.Id" onclick="return confirm('Estas Seguro?');">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
