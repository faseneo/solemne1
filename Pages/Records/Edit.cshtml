@page
@model EditModel
@{
    ViewData["Title"] = "Edit Record";
}

<h2>Edit Record</h2>

<form method="post">
    <input type="hidden" asp-for="Record.Id" />
    <div>
        <label>Name:</label>
        <input asp-for="Record.Name" />
    </div>
    <div>
        <label>Description:</label>
        <input asp-for="Record.Description" />
    </div>
    <button type="submit">Save</button>
</form>