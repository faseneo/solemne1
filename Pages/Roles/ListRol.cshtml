
@page
@model ListRolModel
@{
    ViewData["Title"] = "List of Rol";
}

<h4>Roles</h4>
<a asp-page="CreateRol">
    <button type="button" class="btn btn-primary">Nuevo Rol</button>
</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">NombreRol</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Rol in Model.Roles)
        {
            <tr>
                <td>@Rol.NombreRol</td>
                <td>
                    <a asp-page="EditRol" asp-route-id="@Rol.Id" class="btn btn-warning">
                        Editar
                    </a>
                    <a asp-page-handler="Delete" asp-route-id="@Rol.Id" class="btn btn-danger" onclick="return confirm('Estas Seguro?');">
                        Borrar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
